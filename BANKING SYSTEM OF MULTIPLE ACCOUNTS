def deposit(accounts,acc_no,amount):
    accounts[acc_no] += amount
    print(f"{amount} deposited to account {acc_no}")
    
def withdraw(accounts, acc_no,amount):
    if amount > accounts[acc_no]:
        print("Insuffecient balance")
    else:
        accounts[acc_no] -=amount
        print(f"{amount} withdraw from account {acc_no}.")
        
def transfer(accounts, from_acc, to_acc, amount):
    if to_acc not in accounts:
        print("Recever account is not found")
    elif amount > accounts[from_acc]:
        print("Insufficient balance for transfer")
    else:
        accounts[from_acc] -= amount
        accounts[to_acc] +=amount
        print(f"{amount} transfered from account {from_acc} to account {to_acc}")
        
def account_menu(accounts, acc_no):
    while True:
        print(f"\n--Accounts (acc_no) menu--")
        print("1.Check Balance")
        print("2.Deposit")
        print("3.Withdraw")
        print("4.Transfer")
        print("5.Logout")
        
        choice=input("Enter choice :")
        if choice=='1':
            print(f"Current balance:{accounts[acc_no]}")
        elif choice=='2':
            amt=float(input("Enter deposit amount :"))
            deposit(accounts, acc_no, amt)
        elif choice=='3':
            amt=float(input("Enter withdraw amount :"))
            withdraw(accounts, acc_no, amt)
        elif choice=='4':
            to_acc=int(input("Enter recepient account number :"))
            amt=float(input("Enter amount to transfer :"))
            transfer(accounts, acc_no, to_acc, amt)
        elif choice=='5':
            print(f"Logged out from Account {acc_no}")
            break
        else:
            print("Invalid option!")
            
accounts={
    100: 1000.0,
    101: 1500.0,
    102: 500.0
    }

while True:
    print("_WELCOME TO MULTIPLE ACOUNTS ___")
    acc_no=int(input("Enter your account number (or 0 for exit): "))
    if acc_no==0:
        print("Exiting system Goodbye!")
        break
    elif acc_no in accounts:
        account_menu(accounts, acc_no)
    else:
        print("Account not found ")
